# LLM Assistant Service Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3004

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/aicloud_llm

# Redis Connection
REDIS_URL=redis://localhost:6379

# AI API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# LLM Settings
DEFAULT_MODEL=gpt-4
CONTEXT_WINDOW_SIZE=8192
TEMPERATURE=0.7
MAX_TOKENS=1000

# Tool Configuration
ENABLE_WEB_SEARCH=true
ENABLE_CODE_EXECUTION=false

# Rate Limiting
RATE_LIMIT_TOKENS_PER_MIN=100000

# Logging
LOG_LEVEL=debug
