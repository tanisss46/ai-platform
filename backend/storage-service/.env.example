# Storage Service Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3003

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/aicloud_storage

# Storage Configuration
STORAGE_TYPE=s3  # Options: s3, local
LOCAL_STORAGE_PATH=./storage

# S3 Configuration (if STORAGE_TYPE=s3)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=aicloud
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# File Upload Limits
MAX_FILE_SIZE=100000000  # 100MB
ALLOWED_MIME_TYPES=image/*,video/*,audio/*,application/pdf

# Thumbnail Generation
THUMBNAIL_WIDTH=200
THUMBNAIL_HEIGHT=200
GENERATE_THUMBNAILS=true

# Logging
LOG_LEVEL=debug
